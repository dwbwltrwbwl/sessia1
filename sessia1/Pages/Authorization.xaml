<Page x:Class="sessia1.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="198,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="57"/>
        <PasswordBox x:Name="PBPassword" HorizontalAlignment="Left" Margin="432,155,0,0" VerticalAlignment="Top" Width="200" RenderTransformOrigin="0.967,-0.167" Height="57"/>
        <Button x:Name="ButtonVhod" Content="Войти" HorizontalAlignment="Left" Margin="198,225,0,0" VerticalAlignment="Top" Width="198" Height="29" Click="ButtonVhod_Click"/>
        <Button x:Name="ButtonVhodGost" Content="Войти как гость" HorizontalAlignment="Left" Margin="432,225,0,0" VerticalAlignment="Top" Width="200" Height="29" Background="#FF9E438A" Click="ButtonVhodGost_Click"/>

    </Grid>
</Page>
